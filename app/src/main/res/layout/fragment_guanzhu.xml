<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.lysm.ttclub.fragment.TtclubFragment">

    <LinearLayout
        android:id="@+id/ll_load"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_wifi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shoppingcart_nowifi"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="网络连接错误....."
            android:textColor="@color/defualt_Color"
            android:textSize="12sp"/>

        <Button
            android:id="@+id/btn_laod"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/btn_choose_nvsheng"
            android:text="重新加载"
            />
    </LinearLayout>
</RelativeLayout>
