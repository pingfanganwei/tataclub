<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.lysm.ttclub.fragment.TtclubFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@drawable/reply_dialogue_bg"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_tansuo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:text="探索"
            android:textColor="@color/font_text_selector"
            />

        <TextView
            android:id="@+id/tv_guanzhu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:text="关注"
            android:textColor="@color/font_text_selector"
            />

        <ImageButton
            android:padding="3dp"
            android:id="@+id/ibtn_login"
            android:scaleType="center"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/personal_login_icon"
            android:layout_marginRight="10dp"
            />


    </LinearLayout>

    <!-- TODO: Update blank fragment layout -->
    <View
        android:layout_width="20dp"
        android:layout_height="5dp"
        android:background="@color/base_purple_Color"
        ></View>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        ></android.support.v4.view.ViewPager>


</LinearLayout>
