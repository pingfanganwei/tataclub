<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.lysm.ttclub.fragment.TtclubFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@drawable/reply_dialogue_bg"
        >

        <LinearLayout
            android:id="@+id/ll_group"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/reply_dialogue_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_test"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="研习军团"
                android:textColor="@color/font_text_selector"

                />

            <TextView
                android:id="@+id/tv_girl"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="女神军团"
                android:textColor="@color/font_text_selector"
                />

            <TextView
                android:id="@+id/tv_answer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="专家质询"
                android:textColor="@color/font_text_selector"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_line"
            android:layout_width="70dp"
            android:layout_height="3dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/ll_group"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:background="@color/base_purple_Color"
            ></LinearLayout>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        ></android.support.v4.view.ViewPager>

</LinearLayout>
